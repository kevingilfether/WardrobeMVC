@model WardrobeMVC.Models.Shoe

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-sm-6 col-md-6">
        <div class="thumbnail">
            <img class="detailPic" src=@Html.DisplayFor(model => model.Photo)>
            <div class="caption">
                <h3>@Html.DisplayFor(model => model.Name)</h3>
                <p>@Html.DisplayNameFor(model => model.Color): @Html.DisplayFor(model => model.Color) </p>
                <p>@Html.DisplayNameFor(model => model.Season): @Html.DisplayFor(model => model.Season)</p>
                <p>@Html.DisplayNameFor(model => model.Occasion): @Html.DisplayFor(model => model.Occasion)</p>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ShoeID }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        </div>
    </div>
</div>
