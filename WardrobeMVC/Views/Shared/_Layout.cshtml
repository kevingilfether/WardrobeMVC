<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title LARP WARdrobe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbarCustom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LARP WARdrobe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbarText" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tops", "Index", "Tops", null, new { @class = "navbarText" })</li>
                    <li>@Html.ActionLink("Bottoms", "Index", "Bottoms", null, new { @class = "navbarText" })</li>
                    <li>@Html.ActionLink("Shoes", "Index", "Shoes", null, new { @class = "navbarText" })</li>
                    <li>@Html.ActionLink("Accessories", "Index", "Accessories", null, new { @class = "navbarText" })</li>
                    <li>@Html.ActionLink("Outfits", "Index", "Outfits", null, new { @class = "navbarText" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <div class="row footerRow">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 footerCol">
            <footer>
                <p>@DateTime.Now.Year - Kevin Gilfether - Student Project</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
